{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && bunx biome check . --max-diagnostics=10 2>&1 | head -30",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && bunx tsc --noEmit --pretty false 2>&1 | head -30",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
