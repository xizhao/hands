{
  "name": "@hands/desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "_comment:dev": "NOTE: Editor is NOT built here - runtime spawns editor dev server. Both must run in dev mode for RSC protocol compatibility.",
    "dev:server": "bun run ../agent/src/index.ts",
    "dev:all": "concurrently -n agent,vite -c blue,green \"bun run dev:server\" \"bun run dev\"",
    "build": "tsc -b && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "tauri": "tauri",
    "build:docs": "test -d ../../docs && (cd ../../docs && bun run build) || echo 'Skipping docs build (docs/ not found)'",
    "cleanup": "lsof -ti:1420,55300 | xargs kill -9 2>/dev/null || true",
    "tauri:dev": "bun run build:sidecars && bun run cleanup && tauri dev",
    "tauri:build": "bun run build:sidecars && bun run build:docs && tauri build && bun run scripts/sign-and-package.ts",
    "tauri:build:unsigned": "bun run build:sidecars && bun run build:docs && tauri build",
    "build:sidecars": "bun run scripts/build-sidecars.ts",
    "release": "bun run scripts/release.ts"
  },
  "dependencies": {
    "@hands/app": "workspace:*",
    "@ai-sdk/anthropic": "^2.0.56",
    "@ariakit/react": "0.4.7",
    "@craftjs/core": "^0.2.12",
    "@craftjs/layers": "^0.2.7",
    "@craftjs/utils": "^0.2.5",
    "@glideapps/glide-data-grid": "^6.0.3",
    "@hands/core": "workspace:*",
    "@hands/editor": "workspace:*",
    "@hands/stdlib": "workspace:*",
    "@hands/workbook-server": "workspace:*",
    "@opencode-ai/sdk": "^1.0.198",
    "@phosphor-icons/react": "^2.1.10",
    "@platejs/basic-nodes": "^52.0.11",
    "@platejs/list": "^52.0.11",
    "@platejs/markdown": "^52.0.11",
    "@platejs/mention": "^52.0.1",
    "@tanstack/db": "^0.5.11",
    "@tanstack/react-db": "^0.1.55",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.140.5",
    "@tanstack/react-virtual": "^3.13.13",
    "@tanstack/router-plugin": "^1.140.5",
    "@tauri-apps/api": "^2.2.0",
    "@tauri-apps/plugin-dialog": "^2.2.0",
    "@tauri-apps/plugin-shell": "^2.3.3",
    "@tauri-apps/plugin-store": "^2.4.1",
