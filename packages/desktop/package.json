{
  "name": "@hands/desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "bunx opencode-ai serve --port 4096",
    "dev:all": "concurrently -n server,vite -c blue,green \"bun run dev:server\" \"bun run dev\"",
    "build": "bun run bundle && tsc -b && vite build",
    "bundle": "bun run scripts/bundle-plugin.ts",
    "bundle:watch": "bun run scripts/bundle-plugin.ts --watch",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "tauri": "tauri",
    "build:docs": "cd ../../docs && bun run build",
    "tauri:dev": "bun run build:docs && bun run bundle && concurrently -n bundle,tauri -c yellow,green -k \"bun run bundle:watch\" \"tauri dev\"",
    "tauri:build": "bun run build:docs && bun run bundle && tauri build"
  },
  "dependencies": {
    "@opencode-ai/sdk": "^1.0.134",
    "@platejs/basic-nodes": "^52.0.1",
    "@platejs/combobox": "^52.0.1",
    "@platejs/dnd": "^52.0.1",
    "@platejs/list": "^52.0.1",
    "@platejs/media": "^52.0.1",
    "@platejs/selection": "^52.0.1",
    "@platejs/slash-command": "^52.0.1",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toolbar": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/db": "^0.5.11",
    "@tanstack/react-db": "^0.1.55",
    "@tanstack/react-query": "^5.90.12",
    "@tauri-apps/api": "^2.2.0",
    "@tauri-apps/plugin-store": "^2.4.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.556.0",
    "platejs": "^52.0.8",
    "react": "^19.0.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.0.0",
    "react-markdown": "^9.0.3",
    "react-syntax-highlighter": "^15.6.1",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@tauri-apps/cli": "^2.2.4",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.2",
    "vite": "^6.0.5",
    "concurrently": "^9.1.0"
  }
}
