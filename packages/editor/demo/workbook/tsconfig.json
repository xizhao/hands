{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@hands/db": ["../../../runtime/src/db/dev.ts"],
      "@hands/db/types": [".hands/db.d.ts"],
      "@hands/runtime": ["../../../runtime/src/types/index.ts"],
      "@ui/*": ["ui/*"],
      "@ui/lib/utils": ["../../../runtime/src/lib/utils.ts"]
    }
  },
  "include": ["blocks/**/*", "pages/**/*", "sources/**/*", "ui/**/*", "lib/**/*"],
  "exclude": ["node_modules", ".hands"]
}
