{
  "name": "@hands/runtime",
  "version": "1.0.0",
  "description": "Hands runtime - workbook dev server",
  "main": "index.js",
  "type": "module",
  "sideEffects": [
    "./src/client.tsx",
    "./src/collab/**/*"
  ],
  "keywords": [],
  "author": "team@hands.app",
  "scripts": {
    "build": "vite build",
    "dev": "rm -rf node_modules/.vite node_modules/.vite_* && vite dev",
    "dev:init": "rw-scripts dev-init",
    "preview": "vite preview",
    "worker:run": "rw-scripts worker-run",
    "clean": "npm run clean:vite",
    "clean:vite": "rm -rf ./node_modules/.vite",
    "release": "rw-scripts ensure-deploy-env && npm run clean && npm run build && wrangler deploy",
    "generate": "rw-scripts ensure-env && wrangler types --include-runtime false",
    "check": "npm run generate && npm run types",
    "types": "tsc"
  },
  "dependencies": {
    "@hands/core": "workspace:*",
    "@hands/editor": "workspace:*",
    "@electric-sql/pglite": "^0.2.17",
    "@mdx-js/rollup": "^3.1.1",
    "@platejs/basic-nodes": "^52.0.11",
    "@platejs/basic-styles": "^52.0.11",
    "@platejs/markdown": "^52.0.11",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "is-hotkey": "^0.2.0",
    "kysely": "0.28.8",
    "kysely-d1": "^0.4.0",
    "lucide-react": "^0.561.0",
    "platejs": "^52.0.15",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-grab": "^0.0.89",
    "remark-gfm": "^4.0.1",
    "rwsdk": "1.0.0-beta.41",
    "slate": "^0.120.0",
    "slate-dom": "^0.119.0",
    "slate-hyperscript": "^0.100.0",
    "slate-react": "^0.120.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/vite-plugin": "1.16.1",
    "@cloudflare/workers-types": "4.20251202.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "~24.5.2",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "@vitejs/plugin-react": "^5.1.2",
    "better-sqlite3": "^12.5.0",
    "kysely-codegen": "^0.19.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.8.3",
    "vite": "7.2.6",
    "wrangler": "4.52.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "workerd"
    ]
  }
}
