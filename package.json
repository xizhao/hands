{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "hands",
  "description": "AI-powered data app builder with SST",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.3",
  "scripts": {
    "dev": "bun run --cwd packages/cli src/index.ts",
    "dev:node": "npx tsx packages/cli/src/index.ts",
    "dev:desktop": "bun run --cwd packages/desktop tauri:dev",
    "build": "turbo build",
    "build:desktop": "bun run --cwd packages/desktop tauri:build",
    "typecheck": "turbo typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@module-federation/vite": "^1.9.3",
    "@opencode-ai/plugin": "^1.0.152",
    "@opencode-ai/sdk": "1.0.152",
    "@oxc-parser/binding-wasm32-wasi": "0.102.0",
    "@tsconfig/bun": "1.0.9",
    "@types/bun": "1.3.3",
    "opencode-ai": "^1.0.152",
    "postgres": "^3.4.7",
    "turbo": "2.5.6",
    "typescript": "5.8.2",
    "unenv": "^1.10.0"
  },
  "trustedDependencies": [
    "esbuild",
    "tree-sitter",
    "tree-sitter-bash",
    "web-tree-sitter"
  ],
  "dependencies": {
    "@napi-rs/wasm-runtime": "^1.1.0"
  }
}
