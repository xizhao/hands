{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "hands",
  "description": "AI-powered data app builder with SST",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.3",
  "scripts": {
    "dev": "bun run --cwd packages/runtime src/cli/index.ts",
    "dev:desktop": "bun run --cwd packages/desktop tauri:dev",
    "build": "turbo build",
    "build:desktop": "bun run --cwd packages/desktop tauri:build",
    "typecheck": "turbo typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@module-federation/vite": "^1.9.3",
    "@opencode-ai/plugin": "^1.0.152",
    "@opencode-ai/sdk": "1.0.152",
    "@oxc-parser/binding-wasm32-wasi": "0.102.0",
    "@rollup/plugin-alias": "^6.0.0",
    "@tsconfig/bun": "1.0.9",
    "@types/bun": "1.3.3",
    "@types/mdast": "^4.0.4",
    "mdast-util-mdx-jsx": "^3.2.0",
    "opencode-ai": "^1.0.152",
    "postgres": "^3.4.7",
    "turbo": "2.5.6",
    "typescript": "5.8.2",
    "unenv": "^1.10.0"
  },
  "trustedDependencies": [
    "esbuild",
    "tree-sitter",
    "tree-sitter-bash",
    "web-tree-sitter"
  ],
  "dependencies": {
    "@napi-rs/wasm-runtime": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8"
  },
  "overrides": {
    "kysely": "0.28.8",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2"
  }
}
